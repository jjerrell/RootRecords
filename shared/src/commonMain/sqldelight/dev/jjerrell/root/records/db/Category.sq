CREATE TABLE category (
    id TEXT PRIMARY KEY NOT NULL,
    name TEXT NOT NULL,
    color INTEGER
);

-- Sample data
INSERT INTO category(id, name, color)
VALUES ("123456", 'Example category', 123456789);

selectAll:
SELECT *
FROM category;

selectById:
SELECT *
FROM category WHERE id = ?;

selectByIds:
SELECT *
FROM category
WHERE id IN ?;

insert:
INSERT INTO category(id, name, color)
VALUES (?, ?, ?);

insertFullCategoryObject:
INSERT INTO category(id, name, color)
VALUES ?;