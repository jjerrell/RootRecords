-- Named queries
selectAll:
SELECT *
FROM CategoryEntity;

selectById:
SELECT *
FROM CategoryEntity WHERE id = ?;

selectByIds:
SELECT *
FROM CategoryEntity
WHERE id IN ?;

insert:
INSERT INTO CategoryEntity(id, name, color)
VALUES (?, ?, ?);

insertFullCategoryObject:
